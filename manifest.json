{
  "manifest_version": 2,
  "name": "TabSaver",
  "version": "1.0",
  "description": "A firefox extension for tabs management",
  "icons": {
    "32": "icons/fox_new32.png",
    "48": "icons/fox_new48.png",
		"96": "icons/fox_new64.png",
		"128": "icons/fox_new128.png"
  },
  "browser_action": {
    "default_icon": "icons/fox_new32.png",
    "default_title": "TabSaver",
    "default_popup": "index.html"
	},
	"permissions": [
      "tabs",
      "storage"
	]
}
